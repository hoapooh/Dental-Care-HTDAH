@model Dental_Clinic_System.Areas.Admin.ViewModels.ManagerSpecialtyVM

@{
    ViewData["Title"] = "Chỉnh sửa chuyên khoa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .sidebar .nav-item a.Quan_ly_chuyen_khoa {
        color: #fff;
        background: #4880ff;
    }
</style>

<div class="modal fade show" style="display:block;" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered form-modal-styles">
        <form id="uploadForm" action="~/Admin/ManagerSpecialty/EditSpecialty" method="post" class="modal-content" enctype="multipart/form-data">
            <div class="modal-header">
                <h1 class="modal-title fs-10">Chỉnh sửa thông tin chuyên khoa</h1>
            </div>
            <div class="modal-body">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="special-name">
                    <label for="nameSpecialty">Tên chuyên khoa</label>
                    <input type="text" name="Name" id="nameSpecialty" value="@Model.Name" required />
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
                <div class="special-deposis">
                    <label for="deposisSpecialty">Tiền cọc</label>
                    <input type="number" name="Deposit" id="deposisSpecialty" value="@Model.Deposit" required />
                    <span asp-validation-for="Deposit" class="text-danger"></span>
                </div> 
                <div class="clinic-image col-md-12">
                    <label>Hình ảnh</label>
                    <div class="preview-image col-md-12">
                        <input type="file" id="imageInput" class="form-control" />
                        <input asp-for="Image" type="hidden" id="imageUrl" class="form-control" />
                    </div>
                    <br />
                    <div class="container__image__preview">
                        <div class="style__image__preview row">

                            <div class="final-image col-md-6">
                                <h3 class="title">Hình ảnh hiện tại</h3>
                                <img src="@Model.Image" alt="" id="imageDisplay"
                                     style=" display: block; max-width: 100%; text-align: center; border-radius: 10px;" />
                            </div>

                            <div class="preview-image col-md-6">
                                <h3 class="title">Hình ảnh được chọn</h3>
                                <img src="" alt="" id="imagePreview"
                                     style=" display: block; max-width: 100%; text-align: center; border-radius: 10px;" />
                            </div>

                        </div>
                    </div>
                </div>
                </br>
                <div class="special-desc">
                    <label for="descSpecialty">Mô tả chuyên khoa</label>
                    <div id="container">
                        <div id="editor">
                            <textarea name="Description" class="form-control">@Model.Description</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="~/Admin/ManagerSpecialty/ListSpecialty" class="close-btn btn">Đóng</a>
                <button type="submit" class="submit-btn btn">Lưu</button>
            </div>
        </form>
    </div>
</div>

@* Đưa ảnh lên firebase *@
<script src="~/assets/js/upload-image-firebaseAdmin.js" type="module"></script>

@* Dùng editor *@
<script src="https://cdn.ckeditor.com/ckeditor5/41.4.2/super-build/ckeditor.js"></script>
<script src="~/assets/js/richtexteditor2.js"></script>