@model Dental_Clinic_System.Models.Data.Schedule

@{
    ViewData["Title"] = "Lịch trình";
    Layout = "_LayoutManager";
}
@section Styles {
    <style>
        .sidebar .nav-item a.Lich_lam_viec {
            color: #fff;
            background: #4880ff;
        }

        .chinhle {
            width: 1000px;
        }

        .xoa {
            background: #dc3545;
            border: none;
            outline: none;
            color: white;
            font-weight: 600;
            padding: 6px 20px;
            border-radius: 6px;
            cursor: pointer;
        }

        .button {
            padding: 6px 20px;
        }

        .manager__management__header .action-btn .add__new {
            background: #dc3545;
            border: none;
            outline: none;
            color: white;
            font-weight: 600;
            padding: 6px 20px;
            border-radius: 6px;
            cursor: pointer;
        }

            .manager__management__header .action-btn .add__new:hover {
                background: #bb2d3b;
            }

        .modal-content {
            --mdb-modal-box-shadow: 0 6px 45px -9px rgba(var(--mdb-box-shadow-color-rgb), 0.21), 0 30px 60px -6px rgba(var(--mdb-box-shadow-color-rgb), 0.12);
            border: 0;
            box-shadow: var(--mdb-modal-box-shadow);
            padding: 24px 48px !important; /* Reduced padding for top/bottom and left/right */
            border-radius: 10px; /* Adjust this value to change the roundness of the corners */
        }
    </style>
}

<div class="modal-content">
<!--header -->
<div class="manager__management__header">
    <div class="title">Chắc chắn xóa khung giờ làm việc này?</div>
</div>
<!--body -->
<hr /> @* Đường phân cách *@
    <div style="min-height: 420px;">
<dl class="row" style="padding-left: 100px; font-size: 2rem">
    <dt class="col-sm-2">Nha sĩ</dt>
    <dd class="col-sm-10"> @Model.Dentist.Account.LastName @Model.Dentist.Account.FirstName</dd>

    <dt class="col-sm-2">Ngày làm việc</dt>
    <dd class="col-sm-10">
        @Model.Date.ToString("dd/MM/yyyy")
    </dd>

    <dt class="col-sm-2">
        Khoảng thời gian
    </dt>
    <dd class="col-sm-10">
        @Model.TimeSlot.StartTime.ToString("HH:mm") - @Model.TimeSlot.EndTime.ToString("HH:mm")
    </dd>

    <dt class="col-sm-2">
        Trạng thái
    </dt>
    <dd class="col-sm-10">
        @Model.ScheduleStatus
    </dd>

</dl>
</div>
<hr />
<div class="manager__management__header">
    <h1></h1>
    <div class="action-btn">

            <a asp-action="Edit" asp-route-dentistId="@Model.DentistID" asp-route-date="@Model.Date">Back to Edit</a>
        |
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <button type="submit"
                    class="add__new">
                Xóa
            </button>
        </form>

            
    </div>
</div>
</div>
<br />